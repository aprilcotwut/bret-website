{% import "../mixins/flash-messages.twig" as FlashMessages %}
{% spaceless %}
<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>{{ title|default("Bret Website") }}</title>

		<link href="/styles/site.min.css" rel="stylesheet">
		{% if user and user.canAccessKeystone %}
			<link href="/keystone/styles/content/editor.min.css" rel="stylesheet">
		{% endif %}
	
    <!-- custom fonts (roboto) -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,500,700,400italic' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.0/css/drawer.min.css">

		<script src="/js/jquery/jquery-1.11.3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/iScroll/5.1.3/iscroll.min.js"></script>
		<script src="/js/bootstrap/bootstrap-3.3.5.min.js"></script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.0/js/drawer.min.js"></script>
    <script src="/js/main.js"></script>

		{% if (user is defined) and (user.canAccessKeystone) %}
			<script src="/keystone/js/content/editor.js"></script>
		{% endif %}

		{% block js %}{% endblock %}
	
    <!--[if lt IE 9]>
			<script src="//cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.js"></script>
			<script src="//cdn.jsdelivr.net/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
		{% block css %}{% endblock %}
		{% block head %}{% endblock %}
	</head>
	<body class="drawer drawer--left">
    <header role="banner">
      <button type="button" class="drawer-toggle drawer-hamburger">
          <span class="sr-only">toggle navigation</span>
          <span class="drawer-hamburger-icon"></span>
      </button>
      <div class="title-bar">
        <h2>Bret Lehmer</h2>
      </div>
      <nav class="drawer-nav" role="navigation">
        <ul class="drawer-menu">
          {% for link in navLinks %}
            <li><a class="drawer-menu-item" href="{{ link.href }}">{{ link.label }}</a></li>
          {% endfor %}
        </ul>
      </nav>
    </header>
    <div class="header-bg"></div>
      <!-- <div class="title"><a href="/"><h1>Bret Lhemer</h1></a></div> -->
    <main role="main" id="body" class="container">
      {% block intro %}{% endblock %}
      {{ FlashMessages.renderMessages(messages) }}
      {% block content %}{% endblock %}
    </main>
    <div id="footer" class="container-fluid">
    </div>
  </body>
</html>
{% endspaceless %}
